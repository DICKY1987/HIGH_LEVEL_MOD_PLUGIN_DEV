{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/plugin-manifest.schema.json",
  "title": "ToolStack Plugin Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "version"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_-]*$",
      "description": "Unique plugin identifier"
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*)?(?:\\+[0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*)?$",
      "description": "Semantic version"
    },
    "description": { "type": "string" },
    "category": {
      "type": "string",
      "enum": ["install", "config", "validation", "reporting", "utility"],
      "default": "utility"
    },
    "priority": {
      "type": "string",
      "enum": ["highest", "high", "normal", "low", "lowest"],
      "default": "normal"
    },
    "enabled": { "type": "boolean", "default": true },
    "entryFile": {
      "type": "string",
      "default": "Plugin.psm1",
      "description": "Relative path to the plugin module file"
    },
    "hooks": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "register",
          "preInstall",
          "postInstall",
          "validate",
          "preBuild",
          "postBuild"
        ]
      },
      "uniqueItems": true
    },
    "dependencies": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    }
  }
}
